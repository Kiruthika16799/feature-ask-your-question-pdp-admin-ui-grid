<div id="customquestions_tab" class="product tabcontent">
    <form id="custom_questions_form" action="<?php echo $block->getUrl('customerquestions/index/add'); ?>" method="post">
        <input name="form_key" type="hidden" value="<?php echo $block->getFormKey(); ?>" />

        <div class="form-group">
            <label for="question_name">Name</label>
            <input type="text" class="form-control validate-alpha" id="question_name" name="name" >
            <span class="error-message" id="name-error">Please enter your name</span>
        </div>

        <div class="form-group">
            <label for="question_email">Email</label>
            <input type="email" class="form-control validate-email" id="question_email" name="email" >
            <span class="error-message" id="email-error">Please enter a valid email</span>
        </div>

        <div class="form-group">
            <label for="question_content">Question</label>
            <textarea class="form-control validate-length maximum-length-100" id="question_content" name="questions" rows="4" ></textarea>
            <span class="error-message" id="question-error">Please enter your question</span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<script>
$(document).ready(function() {
    $('#custom_questions_form').submit(function(e) {
        var name = $('#question_name').val().trim();
        var email = $('#question_email').val().trim();
        var questions = $('#question_content').val().trim();
        var isValid = true;

        if (name == '') {
            $('#name-error').show();
            isValid = false;
        } else {
            $('#name-error').hide();
        }

        if (email == '') {
            $('#email-error').show();
            isValid = false;
        } else {
            $('#email-error').hide();
        }

        if (questions == '') {
            $('#question-error').show();
            isValid = false;
        } else {
            $('#question-error').hide();
        }

        if (!isValid) {
            e.preventDefault();
        }
    });
});
</script>